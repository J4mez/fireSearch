{
    "manifest_version": 3,
    "name": "FireSearch",
    "version": "0.1",

    "description": "Reverse image search for Firefox.",

    "icons": {
        "48": "icons/icon48.png",
        "32": "icons/icon32.png",
        "96": "icons/icon96.png"
    },

    "background": {
        "scripts": [
            "app/background.js"
        ]
    },

    "permissions": ["activeTab", "contextMenus", "notifications"],

    "browser_specific_settings": {
        "gecko": {
          "id": "FireSearch@morge.news"
        }
      }
      


}
